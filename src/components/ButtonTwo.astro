---
const { isRounded = false } = Astro.props;
---

<button
    class:list={[
        "bg-blue-400/80",
        "hover:bg-red-700",
        "text-white/85",
        "mt-2",
        "px-2",
        "pt-3",
        "pb-2",
        "leading-4",
        "transition-colors",
        { rounded: isRounded }
    ]}
    class="flex items-center h-10"
>

<slot name="text" />
<div class="bg-red-400 text-white rounded-sm p-1 ml-2 text-center flex items-center justify-center" >
<slot name="icon"/>
</div>
</button>